<div class="container m-5" style="width: 60%;">
    <body>
      <h1>Update basket details</h1>
      <form action="/update" method="POST">
        <input type="hidden" name="basketId" value='<%= basket.basketId %>' />
        <div class="form-group">
          <label>Basket Name</label>
          <input type="text" class="form-control" name="basketName" value='<%= basket.basketName %>' required disabled />
        </div>

        <div class="form-group">
            <label>Details</label>
            <input type="text" class="form-control" name="details" value='<%= basket.details %>' required />
          </div>

        <div class="form-group">
            <label>Quantity Available</label>
            <input type="number" min="0" class="form-control" name="quantityAvailable" value='<%= basket.quantityAvailable %>' required />
        </div>

        <div class="form-group">
            <label>Price</label>
            <input type="number" min="0" class="form-control" name="price" value='<%= basket.price %>' required />
        </div>

  
        <button button class="btn btn-primary">Update</button>
      </form>
      <br />
      <form action="/"><button class="btn btn-success">Home</button></form>
    </body>
  </div>
  