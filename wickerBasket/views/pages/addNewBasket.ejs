<div class="container m-5" style="width: 60%;">
    <body>
      <h1>Add basket details</h1>
      <form action="/add" method="POST">
        <div class="form-group">
          <label>Basket Name</label>
          <input type="text" class="form-control" name="basketName" required />
        </div>

        <div class="form-group">
            <label>Details</label>
            <input type="text" class="form-control" name="details" required />
          </div>

          <div class="form-group">
            <label>Image Url</label>
            <input type="text" class="form-control" name="imageUrl" required />
          </div>

        <div class="form-group">
            <label>Quantity Available</label>
            <input type="number" min="0" class="form-control" name="quantityAvailable" required />
        </div>

        <div class="form-group">
            <label>Price</label>
            <input type="number" min="0" class="form-control" name="price" required />
        </div>

  
        <button button class="btn btn-primary">Add</button>
      </form>
      <br />
      <form action="/"><button class="btn btn-success">Home</button></form>
    </body>
  </div>
  