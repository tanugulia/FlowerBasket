<div class="container mt-5" style="width: 100%; display: flex; flex-direction:column; justify-content: center;">

  <body>
    <h1 style="width: 60%; margin: auto;margin-bottom: 25px;">Update flower details</h1>
    <form action="/update" method="POST" style="width: 60%; margin: auto;">
      <input type="hidden" name="flowerId" value='<%= flower.flowerId %>' />
      <div class="form-group">
        <label>Flower Name</label>
        <input type="text" class="form-control" name="flowerName" value='<%= flower.flowerName %>' disabled />
      </div>

      <div class="form-group">
        <label>Flower description</label>
        </br>
        <input type="text" class="form-control" name="details" value='<%= flower.details %>' required />
      </div>

      <div class="form-group">
        <label>Quantity</label>
        <input type="number" class="form-control" min=0 name="quantityAvailable" value='<%= flower.quantityAvailable %>'
          required />
      </div>
      <div class="form-group">
        <label>Price</label>
        <input type="number" class="form-control" min=1 name="price" value='<%= flower.price %>' required />
      </div>

      <button button class="btn btn-primary">Update</button>
    </form>
    <br />

  </body>
