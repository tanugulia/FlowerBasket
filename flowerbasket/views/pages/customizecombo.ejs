<div class="container" style="margin-top: 10%;">
  <form action="/placeOrder" method="POST">
    <div class="form-group">
      <label for="flowerName" style="font-weight: bold;">Flower </label>
      <select class="form-control" id="flower" name="flowerName">
        <option selected>Select Flower</option>
        <% flowers.forEach(function(i){ %>
        <option value="<%= i.flowerName %>"
          ><%= i.flowerName %> ($<%= i.price %>)</option
        >
        <% }) %>
      </select>
    </div>
    <div class="form-group">
      <label for="basketname" style="font-weight: bold;">Basket </label>
      <select class="form-control" id="basket" name="basketName">
        <option selected>Select Basket</option>
        <% baskets.forEach(function(i){ %>
        <option value="<%= i.basketName %>"
          ><%= i.basketName %> ($<%= i.price %>)</option
        >
        <% }) %>
      </select>
    </div>
    <% var authenticated = sails.authenticated %> <% if(authenticated){%>
    <button
      type="submit"
      id="submit"
      name="submit"
      class="btn btn-primary"
      style="background-color: black;"
    >
      Place Order
    </button>
    <%}else{%>
    <div class="button_place">
      <a
        href="/login"
        type="button"
        class="btn btn-dark"
        role="btn btn-info"
        style="background-color: black; color: white;"
        >Please Login to Place Order</a
      >
    </div>
    <%}%>
  </form>
</div>
