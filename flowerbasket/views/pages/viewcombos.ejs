<div class="container mt-5">
  <div style="margin-top: 80px; text-align: center;">
    <h2>Flower Basket Combos</h2>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Combo Id</th>
        <th>Flower Name</th>
        <th>Basket Name</th>
        <th>Price</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% combos.forEach(function(i){ %>
      <tr>
        <td>
          <%= i.id %>
        </td>
        <td>
          <%= i.flowerName %>
        </td>
        <td>
          <%= i.basketName %>
        </td>
        <td>
          <%= i.price %>
        </td>
        <td>
          <a
            href="/combo/detail?id=<%=i.id%>"
            type="button"
            role="btn btn-info"
            style="background-color: black; color: green;"
            >View Details</a
          >
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
